// update.pug
doctype html

html
  head
    // Título vem do index.js
    title= title

  body
    h1 Criar novo registro

    // Formulário envia dados via POST para /update-cobj
    form(action="/update-cobj" method="POST")

      // ***SUBSTITUIR COM AS PROPRIEDADES QUE VOCÊ CRIOU***
      // NÃO ESQUEÇA DE MUDAR O TYPE!!
      // Campo "customer name"
      label customer_name:
      input(type="text" name="customer_name" required)
      br

      // Campo "status"
      label status:
      input(type="dropdown_select" name="status" required)
      br

      // Campo "LFR"
      label last_feedback_response:
      input(type="text" name="last_feedback_response" required)
      br

      // Botão de envio
      button(type="submit") Criar registro

    // Link para voltar à homepage
    a(href="/") Return to the homepage